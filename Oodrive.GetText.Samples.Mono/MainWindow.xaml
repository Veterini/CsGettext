<Window x:Class="Oodrive.GetText.Samples.Mono.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gtm="http://www.oodrive.com/gettext/utils/mono"
        mc:Ignorable="d"
        Title="{gtm:Text HelloWorld, Context='whole world'}"  Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{gtm:Text NbrOfFiles, Occurence=0 }"/>
        <TextBlock Grid.Row="1" Text="{gtm:Text NbrOfFiles, Occurence=1 }"/>
        <TextBlock Grid.Row="2" Text="{gtm:Text NbrOfFiles, Occurence=2 }"/>
    </Grid>
</Window>
